<%- include("partials/header"); -%>
<div class="contact-form my-4 m-auto">
    <form action="https://formspree.io/f/xrgjvonz" method="POST" autocomplete="off">
        <fieldset>
           <h1>Get in touch with us</h1>
            <div class="px-5">
                <div class="mb-3">
                    <label for="Name" class="form-label">Your Name:</label>
                    <input type="text" class="form-control" id="Name" name="name" placeholder="Name" required>
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Your Email address:</label>
                    <input type="email" class="form-control" id="Email" name="email" placeholder="name@example.com" required>
                </div>
                <div class="mb-3">
                    <label for="Subject" class="form-label">Your message Subject:</label>
                    <input type="text" name="subject" class="form-control" id="Subject" placeholder="Subject for message" required>
                </div>
                <div class="mb-3">
                    <label for="Message" class="form-label">Your message:</label>
                    <textarea name="textarea" class="form-control" id="Message" rows="4" required
                        placeholder="Your Message goes here..."></textarea>
                </div>
                <button name="button" class="btn btn-primary send-message" type="submit">Send Message</button>
            </div>
        </fieldset>
    </form>
</div>
<%- include("partials/footer"); -%>